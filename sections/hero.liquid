{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    { "type": "image_picker", "id": "hero_image", "label": "Background Image" },
    { "type": "text", "id": "heading", "label": "Heading Text" },
    { "type": "text", "id": "subheading", "label": "Subheading Text" }
  ]
}
{% endschema %}
<div class="hero" style="background-image: url({{ section.settings.hero_image | file_url }})">
  <h1>{{ section.settings.heading }}</h1>
  <p>{{ section.settings.subheading }}</p>
  <a href="/collections/all" class="btn">Shop Now</a>
</div>

